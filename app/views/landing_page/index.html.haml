%h1 Automation ROI Calculator

%h3.form-header
  Current Manual vs Future Automated
.container
  .row
    .col-4
      = form_for :automation_scenario do |f|
        .form-group
          = f.label :name
          = f.text_field :name, value: 'Current Manual vs Future Automated', class: 'form-control'
        .form-group
          = f.label :iteration_count
          = f.number_field :iteration_count, value: 100, class: 'form-control'
        = f.fields_for :first_solution do |fs|
          .form-horizontal
            .form-group
              .row
                .col-4
                  = f.label :first_solution_name
                .col-8
                  = f.text_field :name, value: 'Current Manual Process', class: 'form-control'
            .form-group
              .row
                .col-4
                  = f.label :first_solution_initial_cost
                .col-8
                  = f.number_field :first_solution_initial_cost, value: 0, class: 'form-control'
            .form-group
              .row
                .col-4
                  = f.label :first_solution_iteration_cost
                .col-8
                  = f.number_field :first_solution_iteration_cost, value: 10, class: 'form-control'
    .col-8
      #solutionsChart

= javascript_include_tag 'landing_page', 'data-turbolinks-track': 'reload'
