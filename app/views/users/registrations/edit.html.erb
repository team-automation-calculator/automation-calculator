<h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>
<div class="card">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put ,:id => "edit_user"}) do |f| %>

      <%= devise_error_messages! %>
      <%#= render "layouts/validations_error" %>
      <div class="row">
        <div class="col-md-10">
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true,class: 'form-control',readonly: true %>
          </div>
        </div>  
      </div>  

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="row">
        <div class="col-md-10">
          <div class="form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off",class: 'form-control',id: "password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
        </div>  
      </div>    

      <div class="row">
        <div class="col-md-10">
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off",class: 'form-control' %>
          </div>
        </div>  


      </div>    

      <div class="row">
        <div class="col-md-10"> 
          <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off",class: 'form-control' %>
          </div>
        </div>  
      </div>    

      <div class="row">
        <div class="col-md-4">
            <%= f.submit "Update",class: 'btn btn-fill btn-primary btn-block' %>
        </div> 

        <div class="col-md-3">
          <%= link_to "Back", :back, class: "btn btn-fill btn-sucess btn-block" %>
        </div>

        <div class="col-md-3">
          <%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-fill btn-danger btn-block',data: { confirm: "Are you sure?" }, method: :delete %>
        </div>

      </div>    

    <% end %>
  </div>
</div>
<script>
  $( document ).ready(function() {
    $("#edit_user").validate({
      errorElement: 'span',
      errorClass: 'desc',
      rules: {
        "user[password]": {
          required: true
        },
        "user[password_confirmation]": {
          required: true,
          equalTo : "#password"
        },
        "user[current_password]": {
          required: true
        },
        "user[email]": {
          required: true,
          email: true
        }
      },
      messages: {
        "user[email]": {
          required: "We need your email address for edit.",
          email: "Your email address must be in the format of name@domain.com."
        },
        "user[password]": {
          required: "Please set a new password"
        },
         "user[current_password]": {
          required: "Please type your current password here."
        },
        "user[password_confirmation]": {
          required: "Please confirm your new password here."
        }
      },
    });
  }); 
</script>
<style>
.desc{
  color:red;
}
</style>

