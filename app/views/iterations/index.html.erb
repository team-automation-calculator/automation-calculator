<h2><%= link_to "New Iteration", new_automation_scenario_iteration_url(automation_scenario_id: params[:automation_scenario_id])%></h2>
<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Cost</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<%- if @iterations.present? %>
			<%- @iterations.each do |iteration| %>
				<tr>
					<td>
						<%= iteration.iteration_time.strftime('%Y-%m-%d') rescue nil %>
					</td>
					<td>
						<%= iteration.iteration_cost %>
					</td>
					<td>
						<%= link_to "Show", automation_scenario_iteration_url(automation_scenario_id: params[:automation_scenario_id], id: iteration.id) %>
						<%= link_to "Edit", edit_automation_scenario_iteration_url(automation_scenario_id: params[:automation_scenario_id], id: iteration.id) %>
						<%= link_to "Delete", automation_scenario_iteration_url(automation_scenario_id: params[:automation_scenario_id], id: iteration.id), method: :delete, data: {confirm: "Are you sure!"} %>
					</td>
				</tr>
			<% end %>
		<% else %>
			<tr>
				<td colspan="3"> There are no iterations for current automation scenarios.</td>
			</tr>
		<% end %>
	</tbody>
</table>