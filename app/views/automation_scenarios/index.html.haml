%h3.form-header
  All Automation Scenarios
.container
  .row
    - @automation_scenarios.each do |automation_scenario|
      .col-4
        %h4= link_to automation_scenario.display_name, automation_scenario, data: { turbolinks: false }
        .row
          .col Iteration Count:
          .col= automation_scenario.iteration_count
        .row
          .col Solutions Count:
          .col= automation_scenario.solutions.count

.container
  %h4.my-4 A New Automation Scenario
  .row
    .col-4
      = form_for :automation_scenario do |f|
        .form-group
          = f.label :name
          = f.text_field :name, class: 'form-control'
        .form-group
          = f.label :iteration_count
          = f.number_field :iteration_count, class: 'form-control'
        .actions
          = f.submit 'Add a new Automation Scenario', class: 'btn btn-primary'
